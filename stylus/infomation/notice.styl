body
  background #efeff4
  margin 0
.header
  text-align center
  background #FFFFFF
  font-family "Arial"," Heiti SC","宋体",sans-serif
  line-height 20px
  padding 3% 3%
  border-bottom 1px solid #d6d7dc
.info_box
  display flex
  width 80%
  height 30px
  line-height 30px
  margin 0 auto
  border 1px solid #ea5404
  border-radius 4px
  div
    flex 1
    font-size 14px
    color #ea5404
  .news
    position relative
    &:after
      content ''
      position absolute
      top 0
      right 0
      width 1px
      height 30px
      background-color #ea5404
  .notice
    background #ea5404
    color #ffffff
    position relative
    &:after
      content ''
      position absolute
      top 0
      right 0
      width 1px
      height 30px
      background-color #ea5404
.header
  font-size 20px
