body
  background #efeff4
  margin 0
.header
  text-align center
  background #FFFFFF
  font-family "Arial"," Heiti SC","宋体",sans-serif
  line-height 20px
  padding 3% 3%
  border-bottom 1px solid #d6d7dc
.info_box
  display flex
  width 80%
  height 30px
  line-height 30px
  margin 0 auto
  border 1px solid #ea5404
  border-radius 4px
  div
    flex 1
    font-size 14px
    color #ea5404
  .news
    background #ea5404
    color #ffffff
    position relative
    &:after
      content ''
      position absolute
      top 0
      right 0
      width 1px
      height 30px
      background-color #ea5404
  .notice
    position relative
    &:after
      content ''
      position absolute
      top 0
      right 0
      width 1px
      height 30px
      background-color #ea5404
article
  margin 10px 12px
  height 117px
  background #ffffff
  h5
    margin 0
    padding 12px
    line-height 14px
    font-size 14px
    color #333
    font-weight 400
    border-bottom 1px solid #d6d7dc
  p
    padding 10px 12px 0
    margin 0
    text-indent 2em
    text-align justify
    text-justify inter-ideograph
    color #666
    font-size 12px
    line-height 14px
  time
    margin-right 10px
    float right
    color #666
    font-size 10px
.header
  font-size 20px
