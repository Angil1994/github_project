body
  background #efeff4
  margin 0
  font-family "Arial"," Heiti SC","宋体",sans-serif
.header
  text-align center
  background #FFFFFF
  line-height 20px
  width 100%
  padding 3% 0
  border-bottom 1px solid #d6d7dc
  position fixed
  top 0
.info_box
  display flex
  width 80%
  height 30px
  line-height 30px
  margin 0 auto
  border 1px solid #ea5404
  border-radius 4px
  div
    flex 1
    font-size 14px
    color #ea5404
  .news
    position relative
    &:after
      content ''
      position absolute
      top 0
      right 0
      width 1px
      height 30px
      background-color #ea5404
  .notice
    background #ea5404
    color #ffffff
    position relative
    &:after
      content ''
      position absolute
      top 0
      right 0
      width 1px
      height 30px
      background-color #ea5404
.news_interval
  padding 7.5% 0
article
  position relative
  margin 10px 12px
  padding-bottom 8px
  height 117px
  background #ffffff
  border-radius 6px
  box-shadow 0 0 6px #d6d7dc
  h5
    margin 0
    padding 12px
    line-height 14px
    font-size 14px
    color #333
    font-weight 400
    border-bottom 1px solid #d6d7dc
  time
    position absolute
    right 10px
    top 14px
    color #666
    font-size 10px
  p
    padding 10px 12px 0
    margin 0
    text-indent 2em
    text-align justify
    text-justify inter-ideograph
    color #666
    font-size 12px
    line-height 16px
  span
    margin-left 12px
    color #666
    font-size 12px
footer.bottom_nav
  width 100%
  background white
  padding 2% 0
  border-top 1px solid #d6d7dc
  position fixed
  bottom 0
  display flex
  div.bottom_icon
    flex 1
    text-align center
    img
      width 21px
    img#more
      width 42px
    p
      margin 0
      font-size 12px
      line-height 12px
      color #b4b4b4
    p.active
      color #ea5404
      position relative
      &:after
        content "3"
        color #ffffff
        display: block
        width 1.5em
        height 1.5em
        line-height 1.5em
        text-align center
        border-radius 50%
        background: #ec461f
        position absolute
        top -2.5em
        right 1.3em
