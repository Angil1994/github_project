body
  background #efeff4
  margin 0
  font-family "Arial"," Heiti SC","宋体",sans-serif
.header
  font-size 20px
  text-align center
  background #666
  color white
  line-height 20px
  padding 3% 3%
  border-bottom 1px solid #d6d7dc
  img
    width 18px
  span
    float left
    color white

footer.bottom_nav
  width 100%
  background white
  padding 2% 0
  border-top 1px solid #d6d7dc
  position fixed
  bottom 0
  display flex
  div.bottom_icon
    flex 1
    text-align center
    img
      width 21px
    img#more
      width 42px
    p
      margin 0
      font-size 12px
      line-height 12px
      color #b4b4b4
    p.active
      color #ea5404

