body
  background #efeff4
  margin 0
  font-family "Arial"," Heiti SC","宋体",sans-serif
.header
  font-size 20px
  text-align center
  background #fff
  color #323232
  line-height 20px
  padding 3% 3%
  border-bottom 1px solid #d6d7dc
  img
    padding 14px 12px
    width 16px
    position absolute
    right 0
    top 0


.login
  text-align center
  border-bottom 1px solid #d6d7dc
  height 96px
  line-height 96px
  margin-top 10px
  background #ffffff
  font-size 14px
  img#login_user_head
    width 64px
    padding 12px
    float left
  a
    float left
    text-decoration none
    color #323232
  img#login_right_icon
    width 10px
    float right
    padding 39px 12px
.save_info
  line-height 30px
  display flex
  background #fff
  padding 7px
  margin-bottom 10px
  border-bottom 1px solid #d6d7dc
  div
    flex 1
    text-align center
    color #646464
    span
      color #646464
      font-size 12px
    span:before
      content '0'
      font-size 16px
      font-weight bold
      font-style normal
      position relative
      top 2px
      left -5px
  .collection
    border-right 1px solid #d6d7dc

.content_list
  padding 12px
  background #fff
  font-size 0.9em
  color #323232
  margin-bottom 10px
  border-bottom 1px solid #d6d7dc
  img:nth-child(1)
    width 20px
    padding 2px
    position relative
    top 4px
  img:nth-child(3)
    width 8px
    float right
    margin-top 7px


footer.bottom_nav
  width 100%
  background white
  padding 2% 0
  border-top 1px solid #d6d7dc
  position fixed
  bottom 0
  display flex
  div.bottom_icon
    flex 1
    text-align center
    img
      width 21px
    img#more
      width 42px
    p
      margin 0
      font-size 12px
      line-height 12px
      color #b4b4b4
    p.active
      color #ea5404

